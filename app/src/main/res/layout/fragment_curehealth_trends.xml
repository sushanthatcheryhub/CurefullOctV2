<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#e4e4e4"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_3dp"
            android:background="@color/white"
            android:orientation="vertical"
            android:paddingBottom="@dimen/_3dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <customsTextViews.CustomTextViewOpenSanRegular
                    android:id="@+id/txt_date"
                    style="@style/textView_dark_grey_normal_micro"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_marginTop="@dimen/_2dp"
                    android:gravity="center"
                    android:text="7 oct 2016"
                    android:textColor="@color/health_mid_gray"
                    android:textSize="@dimen/_14dp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/img_left_arrow"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/_5dp"
                        android:layout_weight="1"
                        android:src="@drawable/left_arrow_blue_small" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:paddingTop="@dimen/_5dp"
                        android:src="@drawable/step_popup_blue" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:orientation="horizontal">

                        <customsTextViews.CustomTextViewOpenSanRegular
                            android:id="@+id/txt_total_steps"
                            style="@style/textView_dark_grey_normal_micro"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:paddingTop="@dimen/_10dp"
                            android:text="4675 / "
                            android:textColor="@color/health_blue"
                            android:textSize="@dimen/_12dp"
                            android:textStyle="bold" />

                        <customsTextViews.CustomTextViewOpenSanRegular
                            android:id="@+id/txt_total_target"
                            style="@style/textView_dark_grey_normal_micro"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="left"
                            android:paddingTop="@dimen/_10dp"
                            android:text="7584"
                            android:textColor="@color/health_red_drawer"
                            android:textSize="@dimen/_12dp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/img_right_arrow"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="@dimen/_5dp"
                        android:layout_weight="1"
                        android:src="@drawable/right_arrow_grey_small" />

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_3dp"
            android:background="@color/white"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <customsTextViews.CustomTextViewOpenSanRegular
                    android:id="@+id/txt_details"
                    style="@style/textView_dark_grey_normal_micro"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_marginTop="@dimen/_4dp"
                    android:gravity="center"
                    android:text="Detail"
                    android:textColor="@color/health_mid_gray"
                    android:textSize="@dimen/_14dp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <customsTextViews.CustomTextViewOpenSanRegular

                        style="@style/textView_dark_grey_normal_micro"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center|bottom"

                        android:text="Walking"
                        android:textColor="@color/health_light_gray"
                        android:textSize="@dimen/_12dp"
                        android:textStyle="bold" />

                    <customsTextViews.CustomTextViewOpenSanRegular
                        android:id="@+id/txt_walking"
                        style="@style/textView_dark_grey_normal_micro"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center|top"
                        android:text="4675"
                        android:textColor="@color/health_blue"
                        android:textSize="@dimen/_13dp"
                        android:textStyle="bold" />

                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/_5dp"
                    android:layout_marginTop="@dimen/_5dp"
                    android:background="@color/health_light_gray" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <customsTextViews.CustomTextViewOpenSanRegular

                        style="@style/textView_dark_grey_normal_micro"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center|bottom"

                        android:text="Running"
                        android:textColor="@color/health_light_gray"
                        android:textSize="@dimen/_12dp"
                        android:textStyle="bold" />

                    <customsTextViews.CustomTextViewOpenSanRegular
                        android:id="@+id/txt_running"
                        style="@style/textView_dark_grey_normal_micro"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center|top"
                        android:text="0"
                        android:textColor="@color/health_blue"
                        android:textSize="@dimen/_13dp"
                        android:textStyle="bold" />
                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/_5dp"
                    android:layout_marginTop="@dimen/_5dp"
                    android:background="@color/health_light_gray" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <customsTextViews.CustomTextViewOpenSanRegular

                        style="@style/textView_dark_grey_normal_micro"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center|bottom"

                        android:text="Cycling"
                        android:textColor="@color/health_light_gray"
                        android:textSize="@dimen/_12dp"
                        android:textStyle="bold" />

                    <customsTextViews.CustomTextViewOpenSanRegular
                        android:id="@+id/txt_cycling"
                        style="@style/textView_dark_grey_normal_micro"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center|top"
                        android:text="0"
                        android:textColor="@color/health_blue"
                        android:textSize="@dimen/_13dp"
                        android:textStyle="bold" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <customsTextViews.CustomTextViewOpenSanRegular

                        style="@style/textView_dark_grey_normal_micro"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center|bottom"
                        android:paddingTop="@dimen/_5dp"
                        android:text="Calories Burnt"
                        android:textColor="@color/health_light_gray"
                        android:textSize="@dimen/_12dp"
                        android:textStyle="bold" />

                    <customsTextViews.CustomTextViewOpenSanRegular
                        android:id="@+id/txt_calories_burnt"
                        style="@style/textView_dark_grey_normal_micro"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center|top"
                        android:text="0"
                        android:textColor="@color/health_blue"
                        android:textSize="@dimen/_13dp"
                        android:textStyle="bold" />

                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/_5dp"
                    android:layout_marginTop="@dimen/_5dp"
                    android:background="@color/health_light_gray" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"

                    android:orientation="vertical">

                    <customsTextViews.CustomTextViewOpenSanRegular

                        style="@style/textView_dark_grey_normal_micro"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center|bottom"
                        android:paddingTop="@dimen/_1dp"
                        android:text="Water Intake"
                        android:textColor="@color/health_light_gray"
                        android:textSize="@dimen/_12dp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <customsTextViews.CustomTextViewOpenSanBold
                            android:id="@+id/txt_water_level_current"
                            style="@style/textView_dark_grey_normal_micro"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:text="0 /"
                            android:textColor="@color/health_blue"
                            android:textSize="@dimen/_13dp" />

                        <customsTextViews.CustomTextViewOpenSanBold
                            android:id="@+id/txt_water_level_total"
                            style="@style/textView_dark_grey_normal_micro"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="left"
                            android:text="10 glass"
                            android:textColor="@color/health_light_gray"
                            android:textSize="@dimen/_13dp" />
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_3dp"

            android:background="@color/white"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5dp">

                <LinearLayout
                    android:id="@+id/linear_today"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:orientation="horizontal">

                    <customsTextViews.CustomTextViewOpenSanRegular
                        android:id="@+id/btn_daily"
                        style="@style/textView_dark_grey_normal_micro"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/_5dp"
                        android:layout_marginTop="@dimen/_1dp"

                        android:layout_weight="1"
                        android:gravity="center"
                        android:paddingBottom="@dimen/_2dp"
                        android:paddingLeft="@dimen/_5dp"
                        android:paddingRight="@dimen/_5dp"
                        android:paddingTop="@dimen/_2dp"
                        android:text="Daily"
                        android:textColor="@color/health_blue" />

                    <customsTextViews.CustomTextViewOpenSanRegular
                        android:id="@+id/btn_weekly"
                        style="@style/textView_dark_grey_normal_micro"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/_5dp"
                        android:layout_marginTop="@dimen/_1dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="@dimen/_2dp"
                        android:text="Weeks"
                        android:textColor="@color/health_dark_gray" />


                    <customsTextViews.CustomTextViewOpenSanRegular
                        android:id="@+id/btn_monthy"
                        style="@style/textView_dark_grey_normal_micro"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/_5dp"
                        android:layout_marginTop="@dimen/_1dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="@dimen/_2dp"
                        android:text="Months"
                        android:textColor="@color/health_dark_gray" />


                </LinearLayout>


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_180dp"

                android:orientation="vertical">

                <widgets.HorizontalRecyclerView
                    android:id="@+id/horizontal_recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/_30dp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="@dimen/_35dp">

                    <View
                        android:id="@+id/view_line"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/health_light_gray" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_30dp"
                    android:layout_marginTop="@dimen/_20dp">

                    <View
                        android:id="@+id/view_line_vertical"
                        android:layout_width="1dp"
                        android:layout_height="match_parent"

                        android:background="@color/health_light_gray" />
                </RelativeLayout>
            </RelativeLayout>


        </LinearLayout>


    </LinearLayout>
</LinearLayout>
