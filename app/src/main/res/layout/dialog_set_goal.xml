<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:gravity="center"
    android:minWidth="300dp"
    android:orientation="vertical"
    android:padding="1dp">


    <LinearLayout
        android:layout_width="@dimen/_300dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="20dp"
        android:paddingLeft="@dimen/_10dp"
        android:layout_marginRight="20dp"
        android:background="@color/white"
        android:paddingBottom="@dimen/_10dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/topbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_gravity="right"
            android:gravity="right"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/dialog_cancel"
                android:layout_width="@dimen/_50dp"
                android:layout_height="wrap_content"
                android:src="@drawable/cancel_black"
                android:visibility="visible"

                />

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="@dimen/_95dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal">

                <customsTextViews.CustomTextViewOpenSanRegular
                    style="@style/textView_dark_grey_normal_small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:gravity="left"
                    android:text="Gender"
                    android:textColor="@color/health_dark_gray" />

                <customsTextViews.CustomTextViewOpenSanRegular
                    style="@style/textView_dark_grey_normal_small"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="right"
                    android:text="-"
                    android:textColor="@color/health_dark_gray" />
            </LinearLayout>


            <RadioGroup
                android:id="@+id/radioGender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/_10dp"
                android:orientation="horizontal">

                <customsTextViews.CustomRadioButtonOpenSanRegular
                    android:id="@+id/radioMale"
                    style="@style/textView_dark_grey_normal_small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@drawable/button_selector_radio"
                    android:clickable="true"
                    android:paddingLeft="@dimen/_5dp"
                    android:text="Male"
                    android:textColor="@color/health_light_gray" />

                <customsTextViews.CustomRadioButtonOpenSanRegular
                    android:id="@+id/radioFemale"
                    style="@style/textView_dark_grey_normal_small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_15dp"
                    android:button="@drawable/button_selector_radio"
                    android:clickable="true"
                    android:paddingLeft="@dimen/_5dp"
                    android:text="Female"
                    android:textColor="@color/health_light_gray" />

            </RadioGroup>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="@dimen/_95dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal">

                <customsTextViews.CustomTextViewOpenSanRegular
                    style="@style/textView_dark_grey_normal_small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:gravity="left"
                    android:text="Date of Birth"
                    android:textColor="@color/health_dark_gray" />

                <customsTextViews.CustomTextViewOpenSanRegular
                    style="@style/textView_dark_grey_normal_small"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:gravity="right"
                    android:text="-"
                    android:textColor="@color/health_dark_gray" />
            </LinearLayout>

            <customsTextViews.CustomTextViewOpenSanRegular
                android:id="@+id/edt_years"
                style="@style/textView_dark_grey_normal_small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10dp"
                android:hint="DD-MM-YYYY"
                android:paddingBottom="@dimen/_5dp"
                android:paddingTop="@dimen/_5dp"
                android:textColor="@color/health_light_gray"
                android:textColorHint="@color/health_light_gray" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="@dimen/_95dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal">

                <customsTextViews.CustomTextViewOpenSanRegular
                    style="@style/textView_dark_grey_normal_small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:gravity="left"
                    android:text="Height"
                    android:textColor="@color/health_dark_gray" />

                <customsTextViews.CustomTextViewOpenSanRegular
                    style="@style/textView_dark_grey_normal_small"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:gravity="right"
                    android:text="-"
                    android:textColor="@color/health_dark_gray" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.2"

                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">
                    <customsTextViews.CustomEditTextViewOpenSanRegular
                        android:id="@+id/edt_feet"
                        style="@style/textView_dark_grey_normal_small"
                        android:layout_width="@dimen/_50dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_10dp"
                        android:hint="Feet"
                        android:imeOptions="actionNext"
                        android:inputType="number"
                        android:maxLength="2"
                        android:background="@null"
                        android:nextFocusRight="@+id/edt_inchs"
                        android:textColor="@color/health_light_gray"
                        android:textColorHint="@color/health_light_gray"

                        />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginRight="@dimen/_2dp"
                        android:layout_marginLeft="@dimen/_10dp"
                        android:background="@color/health_light_gray" />
                </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">
                    <customsTextViews.CustomEditTextViewOpenSanRegular
                        android:id="@+id/edt_inchs"
                        style="@style/textView_dark_grey_normal_small"
                        android:layout_width="@dimen/_65dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_5dp"
                        android:hint="Inchs"
                        android:background="@null"
                        android:inputType="numberDecimal"
                        android:maxLength="4"
                        android:nextFocusDown="@+id/edt_kgs"
                        android:textColor="@color/health_light_gray"
                        android:textColorHint="@color/health_light_gray"
                         />
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginLeft="@dimen/_5dp"
                            android:background="@color/health_light_gray" />
</LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">
                    <customsTextViews.CustomEditTextViewOpenSanRegular
                        android:id="@+id/edt_cm"
                        style="@style/textView_dark_grey_normal_small"
                        android:layout_width="@dimen/_60dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_10dp"
                        android:hint="Cm"
                        android:background="@null"
                        android:inputType="numberDecimal"
                        android:maxLength="6"
                        android:textColor="@color/health_light_gray"
                        android:textColorHint="@color/health_light_gray"

                        android:visibility="gone" />
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"

                            android:layout_marginRight="@dimen/_50dp"
                            android:background="@color/health_light_gray" />
                        </LinearLayout>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:orientation="horizontal">


                    <customsTextViews.CustomTextViewOpenSanRegular
                        android:id="@+id/txt_height"
                        style="@style/textView_dark_grey_normal_small"
                        android:layout_width="@dimen/_60dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:gravity="right"
                        android:text="@string/txt_height"
                        android:textColor="@color/health_yellow" />


                    <ImageView
                        android:id="@+id/img_select_height"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:padding="@dimen/_5dp"
                        android:src="@drawable/dropdown_yellow" />
                </LinearLayout>

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="@dimen/_95dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal">

                <customsTextViews.CustomTextViewOpenSanRegular
                    style="@style/textView_dark_grey_normal_small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:gravity="left"
                    android:text="Weight"
                    android:textColor="@color/health_dark_gray" />

                <customsTextViews.CustomTextViewOpenSanRegular
                    style="@style/textView_dark_grey_normal_small"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:gravity="right"
                    android:text="-"
                    android:textColor="@color/health_dark_gray" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.2"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">
                    <customsTextViews.CustomEditTextViewOpenSanRegular
                        android:id="@+id/edt_kgs"
                        style="@style/textView_dark_grey_normal_small"
                        android:layout_width="@dimen/_50dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_10dp"
                        android:hint="Kg"
                        android:imeOptions="actionNext"
                        android:inputType="number"
                        android:maxLength="3"
                        android:background="@null"
                        android:nextFocusRight="@+id/edt_grams"
                        android:textColor="@color/health_light_gray"
                        android:textColorHint="@color/health_light_gray"
                        android:theme="@style/TextLabel" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginRight="@dimen/_2dp"
                        android:layout_marginLeft="@dimen/_10dp"
                        android:background="@color/health_light_gray" />
                        </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">
                    <customsTextViews.CustomEditTextViewOpenSanRegular
                        android:id="@+id/edt_grams"
                        style="@style/textView_dark_grey_normal_small"
                        android:layout_width="@dimen/_65dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_5dp"
                        android:hint="Grams"
                        android:imeOptions="actionDone"
                        android:inputType="number"
                        android:background="@null"
                        android:maxLength="3"
                        android:textColor="@color/health_light_gray"
                        android:textColorHint="@color/health_light_gray"
                        android:theme="@style/TextLabel" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"

                        android:layout_marginLeft="@dimen/_5dp"
                        android:background="@color/health_light_gray" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">
                    <customsTextViews.CustomEditTextViewOpenSanRegular
                        android:id="@+id/edt_pounds"
                        style="@style/textView_dark_grey_normal_small"
                        android:layout_width="@dimen/_80dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_10dp"
                        android:hint="Pounds"
                        android:background="@null"
                        android:imeOptions="actionDone"
                        android:inputType="number"
                        android:maxLength="8"
                        android:textColor="@color/health_light_gray"
                        android:textColorHint="@color/health_light_gray"
                        android:theme="@style/TextLabel"
                        android:visibility="gone" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"

                        android:layout_marginRight="@dimen/_50dp"
                        android:background="@color/health_light_gray" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:orientation="horizontal">


                    <customsTextViews.CustomTextViewOpenSanRegular
                        android:id="@+id/txt_weight"
                        style="@style/textView_dark_grey_normal_small"
                        android:layout_width="@dimen/_60dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:gravity="right"
                        android:singleLine="true"
                        android:text="Kgs"
                        android:textColor="@color/health_yellow" />


                    <ImageView
                        android:id="@+id/img_select_weight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:padding="@dimen/_5dp"
                        android:src="@drawable/dropdown_yellow" />
                </LinearLayout>
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="@dimen/_5dp"
            android:gravity="right">

            <customsTextViews.CustomTextViewOpenSanRegular
                android:id="@+id/btn_edit_next"
                style="@style/textView_dark_grey_normal_small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginRight="@dimen/_10dp"
                android:background="@drawable/yellow_button_selector"
                android:gravity="center_vertical"
                android:paddingBottom="@dimen/_2dp"
                android:paddingLeft="@dimen/_10dp"
                android:paddingRight="@dimen/_10dp"
                android:paddingTop="@dimen/_2dp"
                android:text="Next"
                android:textColor="@color/white"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    </LinearLayout>

