<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/coordinatorLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:background="#E9E9E9"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#E9E9E9"
            android:orientation="horizontal">

            <customsTextViews.CustomTextViewOpenSanRegular
                style="@style/textView_dark_grey_normal_micro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_15dp"
                android:layout_marginRight="@dimen/_5dp"
                android:layout_marginTop="@dimen/_5dp"
                android:elevation="@dimen/_10dp"
                android:gravity="center"
                android:padding="@dimen/_2dp"
                android:text="Today's status"
                android:textColor="#01707B" />

            <customsTextViews.CustomTextViewOpenSanRegular
                android:id="@+id/btn_login"
                style="@style/textView_dark_grey_normal_micro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/_5dp"
                android:layout_marginTop="@dimen/_5dp"
                android:background="@drawable/set_goal_button_selector"
                android:elevation="@dimen/_10dp"
                android:gravity="center"
                android:paddingBottom="@dimen/_2dp"
                android:paddingLeft="@dimen/_5dp"
                android:paddingRight="@dimen/_5dp"
                android:paddingTop="@dimen/_2dp"
                android:text="Set goals"
                android:textColor="@color/white" />

        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_5dp"
            android:background="#E9E9E9"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/_15dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerInParent="true"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <ticker.TickerView
                            android:id="@+id/ticker1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:textAppearance="@style/TickerTextAppearance2"
                            app:ticker_animationDuration="100" />

                        <customsTextViews.CustomTextViewOpenSanRegular
                            style="@style/textView_dark_grey_normal_micro"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/ticker1"
                            android:gravity="center_horizontal"
                            android:text="Completed"
                            android:textColor="@color/health_app_progress"
                            android:textStyle="bold" />

                    </LinearLayout>


                    <utils.SeekArc
                        android:id="@+id/seekArcComplete"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_95dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:elevation="@dimen/_10dp"
                        android:padding="@dimen/_5dp"
                        app:arcColor="#ADD5BB"
                        app:arcWidth="@dimen/_6dp"
                        app:clockwise="true"
                        app:enabled="false"
                        app:max="100"
                        app:progress="20"
                        app:progressColor="@color/health_app_progress"
                        app:progressWidth="@dimen/_6dp"
                        app:rotation="0"
                        app:roundEdges="true"
                        app:startAngle="0"
                        app:sweepAngle="360" />
                </RelativeLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/logo" />


                <ticker.TickerView
                    android:id="@+id/text_steps_count"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_horizontal"
                    android:textAppearance="@style/TickerTextAppearance"
                    app:ticker_animationDuration="1000" />

                <!--<customsTextViews.CustomTextViewOpenSanBold-->
                <!--android:id="@+id/text_steps_count"-->
                <!--style="@style/textView_dark_grey_normal_small"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:gravity="center_horizontal"-->
                <!--android:text="571"-->
                <!--android:textAllCaps="true"-->
                <!--android:textColor="#036F79"-->
                <!--android:textStyle="bold" />-->

                <customsTextViews.CustomTextViewOpenSanRegular
                    style="@style/textView_dark_grey_normal_micro"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="Steps"
                    android:textColor="#036F79"
                    android:textStyle="bold" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/logo" />

                <customsTextViews.CustomTextViewOpenSanBold
                    android:id="@+id/txt_health_note"
                    style="@style/textView_dark_grey_normal_small"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="571"
                    android:textAllCaps="true"
                    android:textColor="#036F79"
                    android:textStyle="bold" />


                <customsTextViews.CustomTextViewOpenSanRegular
                    android:id="@+id/customTextViewOpenSanBold"
                    style="@style/textView_dark_grey_normal_micro"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="Distance"
                    android:textColor="#036F79"
                    android:textStyle="bold" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight=".5"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/logo" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/login_gradient"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5dp">

                    <customsTextViews.CustomTextViewOpenSanRegular
                        android:id="@+id/txt_health_text"
                        style="@style/textView_dark_grey_normal_micro"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_15dp"
                        android:layout_marginRight="@dimen/_5dp"
                        android:layout_marginTop="@dimen/_5dp"
                        android:elevation="@dimen/_10dp"
                        android:gravity="center"
                        android:padding="@dimen/_2dp"
                        android:text="Health Note"
                        android:textColor="@color/white" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginRight="@dimen/_5dp"
                        android:layout_toRightOf="@+id/txt_health_text"
                        android:src="@drawable/logo" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentRight="true"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="@dimen/_5dp"
                        android:src="@drawable/logo" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <FrameLayout
                        android:id="@+id/frameLayout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <RelativeLayout
                            android:id="@+id/realtive_notes"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:visibility="visible">


                            <customsTextViews.CustomTextViewOpenSanRegular
                                style="@style/textView_dark_grey_normal_micro"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:elevation="@dimen/_10dp"
                                android:gravity="center"
                                android:padding="@dimen/_2dp"
                                android:text="No Health Notes Yet !! Please Add Some Notes"
                                android:textColor="@color/white" />
                            <!--<ListView-->
                            <!--android:id="@+id/notes"-->
                            <!--android:layout_width="match_parent"-->
                            <!--android:layout_height="wrap_content"></ListView>-->

                        </RelativeLayout>

                        <LinearLayout
                            android:id="@+id/linearView"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/login_gradient"
                            android:gravity="center_vertical"
                            android:orientation="vertical"
                            android:visibility="gone">

                            <LinearLayout
                                android:id="@+id/layoutButtons"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_20dp"
                                android:orientation="vertical"
                                android:visibility="gone">


                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal">

                                        <customsTextViews.CustomTextViewOpenSanRegular
                                            style="@style/textView_dark_grey_normal_micro"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:gravity="center_horizontal"
                                            android:paddingBottom="@dimen/_5dp"
                                            android:paddingTop="@dimen/_5dp"
                                            android:singleLine="true"
                                            android:text="Add Note"
                                            android:textColor="@color/white" />

                                        <customsTextViews.CustomTextViewOpenSanRegular
                                            style="@style/textView_dark_grey_normal_micro_mini"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:gravity="center_horizontal"
                                            android:paddingBottom="@dimen/_5dp"
                                            android:paddingLeft="@dimen/_5dp"
                                            android:paddingTop="@dimen/_5dp"
                                            android:singleLine="true"
                                            android:text="(max 20 Characters)"
                                            android:textColor="@color/white" />
                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal">

                                        <LinearLayout
                                            android:layout_width="@dimen/_100dp"
                                            android:layout_height="wrap_content"
                                            android:background="@drawable/search_bar_add"
                                            android:orientation="horizontal">


                                            <customsTextViews.CustomEditTextViewOpenSanRegular
                                                android:id="@+id/edt_patient_name"
                                                style="@style/textView_dark_grey_normal_micro"
                                                android:layout_width="fill_parent"
                                                android:layout_height="wrap_content"
                                                android:layout_gravity="center_horizontal"
                                                android:layout_marginRight="@dimen/_3dp"
                                                android:background="@android:color/transparent"
                                                android:ellipsize="end"
                                                android:hint="Subject"
                                                android:inputType="textCapWords"
                                                android:marqueeRepeatLimit="marquee_forever"
                                                android:padding="@dimen/_4dp"
                                                android:singleLine="true"
                                                android:textColor="#282828"
                                                android:textColorHint="@color/cure_hint_color" />

                                        </LinearLayout>

                                        <customsTextViews.CustomTextViewOpenSanRegular
                                            style="@style/textView_dark_grey_normal_micro_mini"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:gravity="center_horizontal"
                                            android:paddingBottom="@dimen/_5dp"
                                            android:paddingLeft="@dimen/_5dp"
                                            android:paddingTop="@dimen/_5dp"
                                            android:singleLine="true"
                                            android:text="Clear hear to Add more details"
                                            android:textColor="@color/white" />
                                    </LinearLayout>
                                </LinearLayout>


                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">


                                    <customsTextViews.CustomTextViewOpenSanRegular
                                        style="@style/textView_dark_grey_normal_micro"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:gravity="center_horizontal"
                                        android:paddingBottom="@dimen/_5dp"
                                        android:paddingTop="@dimen/_5dp"
                                        android:singleLine="true"
                                        android:text="Details"
                                        android:textColor="@color/white" />


                                    <LinearLayout
                                        android:layout_width="@dimen/_200dp"
                                        android:layout_height="@dimen/_60dp"
                                        android:background="@drawable/search_bar_add"
                                        android:orientation="horizontal">


                                        <customsTextViews.CustomEditTextViewOpenSanRegular
                                            style="@style/textView_dark_grey_normal_micro"
                                            android:layout_width="fill_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center_horizontal"
                                            android:layout_marginRight="@dimen/_3dp"
                                            android:background="@android:color/transparent"
                                            android:ellipsize="end"
                                            android:inputType="textMultiLine"
                                            android:marqueeRepeatLimit="marquee_forever"
                                            android:padding="@dimen/_4dp"
                                            android:singleLine="true"
                                            android:textColor="#282828"
                                            android:textColorHint="@color/cure_hint_color" />
                                    </LinearLayout>
                                </LinearLayout>


                            </LinearLayout>

                        </LinearLayout>

                    </FrameLayout>
                </RelativeLayout>

            </LinearLayout>


            <LinearLayout
                android:id="@+id/liner_bottom"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".5"
                android:background="#E9E9E9"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_10dp"
                    android:layout_marginTop="@dimen/_5dp"
                    android:orientation="horizontal">

                    <customsTextViews.CustomTextViewOpenSanBold
                        style="@style/textView_dark_grey_normal_medium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="EHR"
                        android:textColor="@color/health_app_text"
                        android:textStyle="bold" />

                    <customsTextViews.CustomTextViewOpenSanBold
                        style="@style/textView_dark_grey_normal_small"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_30dp"
                        android:text="Time to take medicine"
                        android:textColor="@color/health_app_text" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/logo" />

                        <customsTextViews.CustomTextViewOpenSanBold
                            style="@style/textView_dark_grey_normal_micro"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:text="Prescriptions"
                            android:textAllCaps="true"
                            android:textColor="#036F79"
                            android:textStyle="bold" />


                    </LinearLayout>

                    <View
                        android:layout_width="@dimen/_2dp"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="@dimen/_15dp"
                        android:layout_marginTop="@dimen/_15dp"
                        android:background="#8DB9BC" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/logo" />

                        <customsTextViews.CustomTextViewOpenSanBold
                            style="@style/textView_dark_grey_normal_micro"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:text="LAB test report"
                            android:textAllCaps="true"
                            android:textColor="#036F79"
                            android:textStyle="bold" />


                    </LinearLayout>


                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/img_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="@dimen/_5dp"
        android:src="@drawable/ic_add_white_18dp"
        app:fabSize="mini"
        app:layout_anchor="@id/realtive_notes"
        app:layout_anchorGravity="bottom|right|end" />
</android.support.design.widget.CoordinatorLayout>