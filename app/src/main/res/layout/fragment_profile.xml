<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/coordinatorLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:background="@drawable/login_gradient"
    android:clickable="true"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/liner_profile_pic"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_150dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_vew"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:scaleType="fitXY"
                android:src="@drawable/upload_icon" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/liner_upload_new"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5dp"
            android:layout_marginLeft="@dimen/_15dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_upload"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:padding="@dimen/_5dp"
                android:src="@drawable/profile_update" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/liner_profile_pic"
            android:layout_marginLeft="@dimen/_30dp"
            android:layout_marginRight="@dimen/_30dp"
            android:layout_marginTop="@dimen/_20dp"
            android:orientation="vertical">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_layout_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/white"
                android:theme="@style/TextLabel">

                <customsTextViews.CustomEditTextViewMontserratHairLine
                    android:id="@+id/input_name"
                    style="@style/textView_dark_grey_normal_small"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/user_icon"
                    android:drawablePadding="@dimen/_5dp"
                    android:hint="Name"
                    android:inputType="textCapSentences"
                    android:paddingBottom="@dimen/_12dp"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_layout_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10dp"
                android:textColorHint="@color/white"
                android:theme="@style/TextLabel">

                <customsTextViews.CustomEditTextViewMontserratHairLine
                    android:id="@+id/edt_phone"
                    style="@style/textView_dark_grey_normal_small"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/mobile_icon"
                    android:drawablePadding="@dimen/_5dp"
                    android:hint="Phone No"
                    android:inputType="number"
                    android:maxLength="10"
                    android:paddingBottom="@dimen/_12dp"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_layout_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10dp"
                android:textColorHint="@color/white"
                android:theme="@style/TextLabel">

                <customsTextViews.CustomEditTextViewMontserratHairLine
                    android:id="@+id/input_email"
                    style="@style/textView_dark_grey_normal_small"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/email_icon"
                    android:drawablePadding="@dimen/_5dp"
                    android:hint="Email id"
                    android:inputType="textEmailAddress"
                    android:paddingBottom="@dimen/_12dp"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white" />
            </android.support.design.widget.TextInputLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginRight="@dimen/_5dp"
                    android:layout_toRightOf="@+id/txt_health_text"
                    android:src="@drawable/notebook" />

                <customsTextViews.CustomTextViewMontserratHairLine
                    android:id="@+id/btn_click_forgot"
                    style="@style/textView_dark_grey_normal_micro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/_5dp"
                    android:paddingTop="@dimen/_5dp"
                    android:text="Changes Password"
                    android:textColor="@color/health_yellow" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_layout_old_pass"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10dp"
                    android:textColorHint="@color/white"
                    android:theme="@style/TextLabel">

                    <customsTextViews.CustomEditTextViewMontserratHairLine
                        android:id="@+id/input_old_pass"
                        style="@style/textView_dark_grey_normal_small"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/password_icon"
                        android:drawablePadding="@dimen/_5dp"
                        android:hint="Old Password"
                        android:inputType="textPassword"
                        android:paddingBottom="@dimen/_12dp"
                        android:textColor="@color/white"
                        android:textColorHint="@color/white" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_layout_new_pass"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10dp"
                    android:textColorHint="@color/white"
                    android:theme="@style/TextLabel">

                    <customsTextViews.CustomEditTextViewMontserratHairLine
                        android:id="@+id/input_new_pass"
                        style="@style/textView_dark_grey_normal_small"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/password_icon"
                        android:drawablePadding="@dimen/_5dp"
                        android:hint="Old Password"
                        android:inputType="textPassword"
                        android:paddingBottom="@dimen/_12dp"
                        android:textColor="@color/white"
                        android:textColorHint="@color/white" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_layout_new_pass_confrim"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10dp"
                    android:textColorHint="@color/white"
                    android:theme="@style/TextLabel">

                    <customsTextViews.CustomEditTextViewMontserratHairLine
                        android:id="@+id/input_new_pass_confirm"
                        style="@style/textView_dark_grey_normal_small"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/password_icon"
                        android:drawablePadding="@dimen/_5dp"
                        android:hint="Old Password"
                        android:inputType="textPassword"
                        android:paddingBottom="@dimen/_12dp"
                        android:textColor="@color/white"
                        android:textColorHint="@color/white" />
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>

            <customsTextViews.CustomTextViewOpenSanRegular
                android:id="@+id/btn_signup"
                style="@style/textView_dark_grey_normal_medium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/_10dp"
                android:background="@drawable/login_button_selector_new"
                android:gravity="center"
                android:text="Save Changes"
                android:textColor="@color/health_login_text" />


        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <FrameLayout
                android:id="@+id/frameLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/linearView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="left"
                    android:background="#00000000"
                    android:gravity="left"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <LinearLayout
                        android:id="@+id/layoutButtons"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_15dp"
                        android:layout_marginTop="@dimen/_5dp"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <LinearLayout
                            android:id="@+id/liner_animation_upload"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:orientation="horizontal">


                            <ImageView
                                android:id="@+id/img_upload_animation"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:padding="@dimen/_5dp"
                                android:src="@drawable/profile_update" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/liner_gallery"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:orientation="horizontal">


                            <ImageView
                                android:id="@+id/img_gallery"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:padding="@dimen/_5dp"
                                android:src="@drawable/gallery_red" />

                            <customsTextViews.CustomTextViewOpenSanRegular
                                style="@style/textView_dark_grey_normal_small"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:gravity="right"
                                android:singleLine="true"
                                android:text="Browse"
                                android:textColor="@color/health_login_text" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/liner_camera"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">


                            <ImageView
                                android:id="@+id/img_camera"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:padding="@dimen/_5dp"
                                android:src="@drawable/camera_red" />

                            <customsTextViews.CustomTextViewOpenSanRegular
                                style="@style/textView_dark_grey_normal_small"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:gravity="right"
                                android:singleLine="true"
                                android:text="Take a picture"
                                android:textColor="@color/health_login_text" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">


                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:padding="@dimen/_5dp"
                                android:src="@drawable/remove_red" />

                            <customsTextViews.CustomTextViewOpenSanRegular
                                style="@style/textView_dark_grey_normal_small"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:gravity="right"
                                android:singleLine="true"
                                android:text="Remove"
                                android:textColor="@color/health_login_text" />
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/realtive_notes"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                </RelativeLayout>

            </FrameLayout>
        </RelativeLayout>

    </RelativeLayout>
</android.support.design.widget.CoordinatorLayout>