<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/coordinatorLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:background="@drawable/login_gradient"
    android:clickable="true"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_10dp"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="@dimen/_75dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:orientation="horizontal">

                    <customsTextViews.CustomTextViewOpenSanRegular
                        style="@style/textView_dark_grey_normal_small"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:gravity="left"
                        android:text="Gender"
                        android:textColor="@color/white" />

                    <customsTextViews.CustomTextViewOpenSanRegular
                        style="@style/textView_dark_grey_normal_small"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/_15dp"
                        android:gravity="right"
                        android:text="-"
                        android:textColor="@color/white" />
                </LinearLayout>


                <RadioGroup
                    android:id="@+id/radioGender"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/_20dp"
                    android:orientation="horizontal">

                    <customsTextViews.CustomRadioButtonOpenSanRegular
                        android:id="@+id/radioMale"
                        style="@style/textView_dark_grey_normal_micro"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:button="@drawable/button_selector_radio"
                        android:clickable="true"
                        android:paddingLeft="@dimen/_5dp"
                        android:text="Male"
                        android:textColor="@color/white" />

                    <customsTextViews.CustomRadioButtonOpenSanRegular
                        android:id="@+id/radioFemale"
                        style="@style/textView_dark_grey_normal_micro"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_15dp"
                        android:button="@drawable/button_selector_radio"
                        android:clickable="true"
                        android:paddingLeft="@dimen/_5dp"
                        android:text="Female"
                        android:textColor="@color/white" />

                </RadioGroup>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="@dimen/_75dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:orientation="horizontal">

                    <customsTextViews.CustomTextViewOpenSanRegular
                        style="@style/textView_dark_grey_normal_small"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:gravity="left"
                        android:text="Age"
                        android:textColor="@color/white" />

                    <customsTextViews.CustomTextViewOpenSanRegular
                        style="@style/textView_dark_grey_normal_small"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginLeft="@dimen/_25dp"
                        android:gravity="right"
                        android:text="-"
                        android:textColor="@color/white" />
                </LinearLayout>

                <customsTextViews.CustomTextViewOpenSanRegular
                    android:id="@+id/edt_years"
                    style="@style/textView_dark_grey_normal_small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_20dp"
                    android:hint="Date of Birth"
                    android:padding="@dimen/_5dp"
                    android:inputType="number"
                    android:maxLength="2"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                     />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="@dimen/_75dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:orientation="horizontal">

                    <customsTextViews.CustomTextViewOpenSanRegular
                        style="@style/textView_dark_grey_normal_small"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:gravity="left"
                        android:text="Height"
                        android:textColor="@color/white" />

                    <customsTextViews.CustomTextViewOpenSanRegular
                        style="@style/textView_dark_grey_normal_small"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginLeft="@dimen/_25dp"
                        android:gravity="right"
                        android:text="-"
                        android:textColor="@color/white" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.2"
                        android:orientation="horizontal">

                        <customsTextViews.CustomEditTextViewMontserratHairLine
                            android:id="@+id/edt_feet"
                            style="@style/textView_dark_grey_normal_small"
                            android:layout_width="@dimen/_40dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_20dp"
                            android:hint="Feet"
                            android:inputType="number"
                            android:nextFocusRight="@+id/edt_inchs"
                            android:maxLength="2"
                            android:textColor="@color/white"
                            android:textColorHint="@color/white"
                            android:theme="@style/TextLabel" />


                        <customsTextViews.CustomEditTextViewMontserratHairLine
                            android:id="@+id/edt_inchs"
                            style="@style/textView_dark_grey_normal_small"
                            android:layout_width="@dimen/_45dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_10dp"
                            android:hint="Inchs"
                            android:inputType="number"
                            android:nextFocusDown="@+id/edt_kgs"
                            android:maxLength="1"
                            android:textColor="@color/white"
                            android:textColorHint="@color/white"
                            android:theme="@style/TextLabel" />

                        <customsTextViews.CustomEditTextViewMontserratHairLine
                            android:id="@+id/edt_cm"
                            style="@style/textView_dark_grey_normal_small"
                            android:layout_width="@dimen/_45dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_20dp"
                            android:hint="Cm"
                            android:inputType="number"
                            android:maxLength="3"
                            android:textColor="@color/white"
                            android:textColorHint="@color/white"
                            android:theme="@style/TextLabel"
                            android:visibility="gone" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:orientation="horizontal">


                        <customsTextViews.CustomTextViewOpenSanRegular
                            android:id="@+id/txt_height"
                            style="@style/textView_dark_grey_normal_small"
                            android:layout_width="@dimen/_60dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:gravity="right"
                            android:text="@string/txt_height"
                            android:textColor="#ffffff"
                            android:textColorHint="#ffffff" />


                        <ImageView
                            android:id="@+id/img_select_height"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:padding="@dimen/_5dp"
                            android:src="@drawable/down_arrow_white" />
                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="@dimen/_75dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:orientation="horizontal">

                    <customsTextViews.CustomTextViewOpenSanRegular
                        style="@style/textView_dark_grey_normal_small"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:gravity="left"
                        android:text="Weight"
                        android:textColor="@color/white" />

                    <customsTextViews.CustomTextViewOpenSanRegular
                        style="@style/textView_dark_grey_normal_small"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginLeft="@dimen/_25dp"
                        android:gravity="right"
                        android:text="-"
                        android:textColor="@color/white" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.2"
                        android:orientation="horizontal">


                        <customsTextViews.CustomEditTextViewMontserratHairLine
                            android:id="@+id/edt_kgs"
                            style="@style/textView_dark_grey_normal_small"
                            android:layout_width="@dimen/_40dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_20dp"
                            android:hint="Kg"
                            android:inputType="number"
                            android:nextFocusRight="@+id/edt_grams"
                            android:maxLength="3"
                            android:textColor="@color/white"
                            android:textColorHint="@color/white"
                            android:theme="@style/TextLabel" />


                        <customsTextViews.CustomEditTextViewMontserratHairLine
                            android:id="@+id/edt_grams"
                            style="@style/textView_dark_grey_normal_small"
                            android:layout_width="@dimen/_45dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_10dp"
                            android:hint="Grams"
                            android:inputType="number"
                            android:nextFocusDown="@+id/water_100"
                            android:maxLength="3"
                            android:textColor="@color/white"
                            android:textColorHint="@color/white"
                            android:theme="@style/TextLabel" />

                        <customsTextViews.CustomEditTextViewMontserratHairLine
                            android:id="@+id/edt_pounds"
                            style="@style/textView_dark_grey_normal_small"
                            android:layout_width="@dimen/_50dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_20dp"
                            android:hint="Pounds"
                            android:inputType="number"
                            android:nextFocusDown="@+id/water_100"
                            android:maxLength="3"
                            android:textColor="@color/white"
                            android:textColorHint="@color/white"
                            android:theme="@style/TextLabel"
                            android:visibility="gone" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:orientation="horizontal">


                        <customsTextViews.CustomTextViewOpenSanRegular
                            android:id="@+id/txt_weight"
                            style="@style/textView_dark_grey_normal_small"
                            android:layout_width="@dimen/_60dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:gravity="right"
                            android:singleLine="true"
                            android:text="Kgs"
                            android:textColor="#ffffff"
                            android:textColorHint="#ffffff" />


                        <ImageView
                            android:id="@+id/img_select_weight"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:padding="@dimen/_5dp"
                            android:src="@drawable/down_arrow_white" />
                    </LinearLayout>
                </LinearLayout>


            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_10dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".7"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <customsTextViews.CustomTextViewOpenSanRegular
                            style="@style/textView_dark_grey_normal_small"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:gravity="left"
                            android:text="BMI"
                            android:textColor="@color/white" />

                        <customsTextViews.CustomTextViewOpenSanRegular
                            android:id="@+id/txt_BMI"
                            style="@style/textView_dark_grey_normal_micro"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="----"
                            android:textColor="@color/health_yellow" />
                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_15dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <customsTextViews.CustomTextViewOpenSanRegular
                            style="@style/textView_dark_grey_normal_small"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:gravity="left"
                            android:text="BMR"
                            android:textColor="@color/white" />

                        <customsTextViews.CustomTextViewOpenSanRegular
                            android:id="@+id/txt_BMR"
                            style="@style/textView_dark_grey_normal_micro"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="----"
                            android:textColor="@color/health_yellow" />
                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_15dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <customsTextViews.CustomTextViewOpenSanRegular
                            style="@style/textView_dark_grey_normal_small"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:gravity="left"
                            android:text="Ideal Weight"
                            android:textColor="@color/white" />

                        <customsTextViews.CustomTextViewOpenSanRegular
                            style="@style/textView_dark_grey_normal_micro"

                            android:id="@+id/txt_ideal_weight"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="----"
                            android:textColor="@color/health_yellow" />
                    </LinearLayout>


                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_10dp"
                    android:orientation="horizontal">

                    <customsTextViews.CustomTextViewOpenSanRegular
                        style="@style/textView_dark_grey_normal_small"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Recommended Daily exercise-"
                        android:textColor="@color/white" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/_15dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:gravity="center_vertical"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:src="@drawable/step_count_yellow_icon" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:gravity="center_vertical"
                            android:orientation="vertical">

                            <customsTextViews.CustomTextViewOpenSanRegular
                                style="@style/textView_dark_grey_normal_micro"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:gravity="left"
                                android:text="Steps"
                                android:textColor="@color/white" />


                            <customsTextViews.CustomEditTextViewMontserratHairLine
                                android:id="@+id/edt_steps"
                                style="@style/textView_dark_grey_normal_micro"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="left"
                                android:text="10000"
                                android:enabled="false"
                                android:focusable="false"
                                android:textColor="@color/health_yellow"
                                android:textStyle="bold"
                                android:theme="@style/TextLabelYellow" />


                        </LinearLayout>


                    </LinearLayout>

                    <View
                        android:layout_width="@dimen/_2dp"
                        android:layout_height="match_parent"
                        android:background="@color/health_yellow" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/_5dp"
                        android:layout_weight="1.5"

                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:gravity="center_vertical"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:src="@drawable/calory_burnt_yellow_icon" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:gravity="center_vertical"
                            android:orientation="vertical">

                            <customsTextViews.CustomTextViewOpenSanRegular
                                android:id="@+id/txt_name"
                                style="@style/textView_dark_grey_normal_micro"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:gravity="left"
                                android:text="Calories burn"
                                android:textColor="@color/white" />


                            <customsTextViews.CustomEditTextViewMontserratHairLine
                                android:id="@+id/edt_calories"
                                style="@style/textView_dark_grey_normal_micro"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/txt_name"
                                android:layout_centerInParent="true"
                                android:gravity="left"
                                android:text="2000"
                                android:textColor="@color/health_yellow"
                                android:textStyle="bold"
                                android:theme="@style/TextLabelYellow" />


                        </LinearLayout>


                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/_15dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:gravity="center_vertical"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:src="@drawable/water_bottle_yellow" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:gravity="center_vertical"
                            android:orientation="vertical">

                            <customsTextViews.CustomTextViewOpenSanRegular
                                style="@style/textView_dark_grey_normal_micro"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:gravity="left"
                                android:text="Water"
                                android:textColor="@color/white" />


                            <customsTextViews.CustomEditTextViewMontserratHairLine
                                android:id="@+id/edt_water"
                                style="@style/textView_dark_grey_normal_micro"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/txt_name"
                                android:layout_centerInParent="true"
                                android:gravity="left"
                                android:text="6"
                                android:textColor="@color/health_yellow"
                                android:textStyle="bold"
                                android:theme="@style/TextLabelYellow" />

                        </LinearLayout>


                    </LinearLayout>

                    <View
                        android:layout_width="@dimen/_2dp"
                        android:layout_height="match_parent"
                        android:background="@color/health_yellow" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/_5dp"
                        android:layout_weight="1.5"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <customsTextViews.CustomTextViewOpenSanRegular
                            android:id="@+id/btn_edit_goal"
                            style="@style/textView_dark_grey_normal_micro"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:layout_marginLeft="@dimen/_10dp"
                            android:background="@drawable/login_patient_button_selector"
                            android:elevation="@dimen/_5dp"
                            android:gravity="center_vertical"
                            android:paddingBottom="@dimen/_2dp"
                            android:paddingLeft="@dimen/_10dp"
                            android:paddingRight="@dimen/_10dp"
                            android:paddingTop="@dimen/_2dp"
                            android:text="Edit Goal"
                            android:textColor="@color/health_login_text" />


                    </LinearLayout>


                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_20dp"
                android:orientation="horizontal">

                <customsTextViews.CustomTextViewOpenSanRegular
                    style="@style/textView_dark_grey_normal_small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Select glass size for water"
                    android:textColor="@color/white" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="bottom"
                android:layout_marginLeft="@dimen/_20dp"
                android:gravity="bottom"
                android:orientation="horizontal">


                <LinearLayout
                    android:id="@+id/liner_100ml"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:gravity="bottom"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/img_100ml"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/right_icon" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/_5dp"
                        android:src="@drawable/glass_01" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
