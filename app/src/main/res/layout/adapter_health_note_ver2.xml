<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/coordinatorLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:focusableInTouchMode="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/_10dp"
        android:paddingBottom="@dimen/_10dp"
        android:orientation="vertical">


        <LinearLayout
            android:id="@+id/liner_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout

                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight=".7"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/_10dp">

                <CheckBox
                    android:id="@+id/checkBox_share"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1.5"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:padding="@dimen/_5dp">

                <customsTextViews.CustomTextViewOpenSanRegular
                    android:id="@+id/txt_date_time"
                    style="@style/textView_dark_grey_normal_micro"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_3dp"
                    android:gravity="center_vertical"
                    android:text="17 Oct 2016"
                    android:textColor="@color/health_dark_gray" />


                <customsTextViews.CustomTextViewOpenSanRegular
                    android:id="@+id/txt_time"
                    style="@style/textView_dark_grey_normal_micro"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_3dp"
                    android:gravity="center_vertical"
                    android:text="4:30 pm - 6:30 pm"
                    android:textColor="@color/health_dark_gray" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="2.5"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:padding="@dimen/_5dp">

                <customsTextViews.CustomTextViewOpenSanRegular
                    android:id="@+id/txt_title"
                    style="@style/textView_dark_grey_normal_micro"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_3dp"
                    android:layout_gravity="left"
                    android:gravity="left"
                    android:text="Health App"
                    android:textStyle="bold"
                    android:textColor="@color/health_dark_gray" />

                <customsTextViews.CustomTextViewOpenSanRegular
                    android:id="@+id/txt_details"
                    style="@style/textView_dark_grey_normal_micro"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:gravity="left"
                    android:layout_margin="@dimen/_3dp"
                    android:text="Details"
                     />



            </LinearLayout>

            <!-- <LinearLayout
                android:id="@+id/img_delete"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight=".7"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/_10dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="@dimen/_5dp"
                    android:src="@drawable/delete_icon" />

            </LinearLayout>
-->

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/health_light_bg" />
    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>