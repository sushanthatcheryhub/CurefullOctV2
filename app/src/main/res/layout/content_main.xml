<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/top_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:elevation="@dimen/_15dp"
        android:orientation="horizontal"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/liner_medincine"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:background="@drawable/my_ripple_yellow"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:padding="@dimen/_10dp">

            <customsTextViews.CustomTextViewOpenSanBold
                android:id="@+id/txt_med"
                style="@style/textView_dark_grey_normal_micro"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:text="Medicine"
                android:textColor="@color/health_dark_gray"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/img_medicine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/_5dp"
                android:layout_toRightOf="@+id/txt_med"
                android:src="@drawable/medicine_icon_yellow" />
        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/health_light_gray" />

        <LinearLayout
            android:id="@+id/liner_doctor_visit"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:background="@drawable/my_ripple_yellow"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <customsTextViews.CustomTextViewOpenSanBold
                android:id="@+id/txt_doctor_visit"
                style="@style/textView_dark_grey_normal_micro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:text="Doctor Visit"
                android:textColor="@color/health_dark_gray"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/img_doctor_visit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/_5dp"
                android:src="@drawable/doctor_icon_yellow" />
        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/health_light_gray" />

        <LinearLayout
            android:id="@+id/liner_lab_test"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:background="@drawable/my_ripple_yellow"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:padding="@dimen/_10dp">

            <customsTextViews.CustomTextViewOpenSanBold
                android:id="@+id/txt_lab_test"
                style="@style/textView_dark_grey_normal_micro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:text="Lab Test"
                android:textColor="@color/health_dark_gray"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/img_lab_test"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/_5dp"
                android:src="@drawable/lab_icon_yellow" />
        </LinearLayout>

    </LinearLayout>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/liner_bottom_view"
        android:layout_below="@+id/top_view"
        android:elevation="@dimen/_15dp"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/relative_logo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/home_background"
            android:visibility="visible">

            <ImageView
                android:id="@+id/logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/logo" />

        </RelativeLayout>

        <FrameLayout
            android:id="@+id/framge_parent"
            android:layout_width="match_parent"
            android:layout_below="@+id/relative_logo"
            android:layout_height="match_parent" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <ProgressBar
                android:id="@+id/progress_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:visibility="visible" />
        </RelativeLayout>
    </RelativeLayout>





    <RelativeLayout
        android:id="@+id/liner_bottom_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/health_yellow"
        android:elevation="@dimen/_15dp"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/txt_bottom_heath_app"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:background="@drawable/my_ripple"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:padding="@dimen/_10dp">


                <ImageView
                    android:id="@+id/img_health_app"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/footer_healthapp_yellow" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/txt_bottom_health_note"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:background="@drawable/my_ripple"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:padding="@dimen/_10dp">

                <ImageView
                    android:id="@+id/img_health_note"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/_5dp"
                    android:src="@drawable/footer_healthnote_yellow" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/txt_bottom_home"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:background="@drawable/my_ripple"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:padding="@dimen/_10dp">

                <ImageView
                    android:id="@+id/img_health_home"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/_5dp"
                    android:src="@drawable/footer_home_yellow" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/txt_bottom_prescription"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:background="@drawable/my_ripple"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:padding="@dimen/_10dp">


                <ImageView
                    android:id="@+id/img_health_pre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/_5dp"
                    android:src="@drawable/footer_ehr_yellow" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/txt_bottom_reports"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:background="@drawable/my_ripple"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:padding="@dimen/_10dp">

                <ImageView
                    android:id="@+id/img_health_report"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/_5dp"
                    android:src="@drawable/footer_report_yellow" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>


</RelativeLayout>