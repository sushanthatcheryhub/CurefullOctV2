<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/coordinatorLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:focusableInTouchMode="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/linearView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_10dp"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:visibility="visible">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <customsTextViews.CustomTextViewOpenSanRegular
                    style="@style/textView_dark_grey_normal_small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:elevation="@dimen/_5dp"
                    android:gravity="left"
                    android:padding="@dimen/_5dp"
                    android:text="Type"
                    android:textColor="@color/health_dark_gray" />

                <customsTextViews.CustomTextViewOpenSanRegular
                    android:id="@+id/txt_btn_remove"
                    style="@style/textView_dark_grey_normal_small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="right"
                    android:elevation="@dimen/_5dp"
                    android:gravity="right"
                    android:padding="@dimen/_5dp"
                    android:text="Remove"
                    android:textColor="@color/health_yellow"
                    android:visibility="gone" />
            </RelativeLayout>


            <LinearLayout
                android:id="@+id/layou_mymessages_favourites"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="@dimen/_5dp"
                android:orientation="horizontal">

                <RelativeLayout
                    android:id="@+id/layout_tablet"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/registerandloginbuttonselector"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/_4dp">

                    <ImageView
                        android:id="@+id/image_tablet"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/_5dp"
                        android:src="@drawable/tablet_yellow" />


                    <customsTextViews.CustomTextViewOpenSanRegular
                        android:id="@+id/txt_tablet"
                        style="@style/textView_dark_grey_normal_micro"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/image_tablet"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center_horizontal"
                        android:text="Tablet"
                        android:textColor="@color/health_dark_gray" />
                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/layout_capsule"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/registerandloginbuttonselector"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/_4dp">

                    <ImageView
                        android:id="@+id/img_capsule"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/_5dp"
                        android:src="@drawable/capsule_yellow" />


                    <customsTextViews.CustomTextViewOpenSanRegular
                        android:id="@+id/txt_capsule"
                        style="@style/textView_dark_grey_normal_micro"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/img_capsule"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center_horizontal"
                        android:text="Capsule"
                        android:textColor="@color/health_dark_gray" />
                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/layout_syrup"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/registerandloginbuttonselector"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/_4dp">

                    <ImageView
                        android:id="@+id/img_syrup"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/_5dp"
                        android:src="@drawable/syrup_yellow" />


                    <customsTextViews.CustomTextViewOpenSanRegular
                        android:id="@+id/txt_syrup"
                        style="@style/textView_dark_grey_normal_micro"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/img_syrup"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center_horizontal"
                        android:text="Syrup"
                        android:textColor="@color/health_dark_gray" />
                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/layout_drops"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/registerandloginbuttonselector"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/_4dp">

                    <ImageView
                        android:id="@+id/img_drops"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/_5dp"
                        android:src="@drawable/drops_yellow" />


                    <customsTextViews.CustomTextViewOpenSanRegular
                        android:id="@+id/txt_drop"
                        style="@style/textView_dark_grey_normal_micro"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/img_drops"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center_horizontal"
                        android:text="Drops"
                        android:textColor="@color/health_dark_gray" />
                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/layout_injection"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/registerandloginbuttonselector"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/_4dp">

                    <ImageView
                        android:id="@+id/img_injection"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/_5dp"
                        android:src="@drawable/injection_yellow" />


                    <customsTextViews.CustomTextViewOpenSanRegular
                        android:id="@+id/txt_injection"
                        style="@style/textView_dark_grey_normal_micro"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/img_injection"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center_horizontal"
                        android:text="Injection"
                        android:textColor="@color/health_dark_gray" />
                </RelativeLayout>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <customsTextViews.CustomTextViewOpenSanRegular
                            style="@style/textView_dark_grey_normal_micro"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:paddingBottom="@dimen/_5dp"
                            android:paddingTop="@dimen/_5dp"
                            android:singleLine="true"
                            android:text="Doctor Name"
                            android:textColor="@color/health_dark_gray"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="@dimen/_130dp"
                            android:layout_height="wrap_content"
                            android:background="@drawable/search_bar_add"
                            android:orientation="horizontal">


                            <customsTextViews.CustomEditTextViewOpenSanRegular
                                android:id="@+id/edt_doctor_name"
                                style="@style/textView_dark_grey_normal_micro"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginRight="@dimen/_3dp"
                                android:background="@android:color/transparent"
                                android:ellipsize="end"
                                android:hint="Type Doctor Name"
                                android:imeOptions="actionNext"
                                android:inputType="textCapWords"
                                android:marqueeRepeatLimit="marquee_forever"
                                android:maxLength="35"
                                android:nextFocusRight="@+id/edt_medicine_name"
                                android:padding="@dimen/_4dp"
                                android:singleLine="true"
                                android:textColor="@color/health_mid_gray"
                                android:textColorHint="@color/health_light_gray" />

                        </LinearLayout>


                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <customsTextViews.CustomTextViewOpenSanRegular
                            style="@style/textView_dark_grey_normal_micro"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:paddingBottom="@dimen/_5dp"
                            android:paddingTop="@dimen/_5dp"
                            android:singleLine="true"
                            android:text="Medicine Name"
                            android:textColor="@color/health_dark_gray"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="@dimen/_130dp"
                            android:layout_height="wrap_content"
                            android:background="@drawable/search_bar_add"
                            android:orientation="horizontal">


                            <customsTextViews.CustomEditTextViewOpenSanRegular
                                android:id="@+id/edt_medicine_name"
                                style="@style/textView_dark_grey_normal_micro"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginRight="@dimen/_3dp"
                                android:background="@android:color/transparent"
                                android:ellipsize="end"
                                android:hint="Type Medicine Name"
                                android:imeOptions="actionNext"
                                android:inputType="textCapWords"
                                android:marqueeRepeatLimit="marquee_forever"
                                android:maxLength="35"
                                android:padding="@dimen/_4dp"
                                android:singleLine="true"
                                android:textColor="@color/health_mid_gray"
                                android:textColorHint="@color/health_light_gray" />

                        </LinearLayout>


                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <customsTextViews.CustomTextViewOpenSanRegular
                        style="@style/textView_dark_grey_normal_micro"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:paddingBottom="@dimen/_5dp"
                        android:paddingTop="@dimen/_5dp"
                        android:singleLine="true"
                        android:text="Quantity"
                        android:textColor="@color/health_dark_gray"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/img_minus_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:padding="@dimen/_5dp"
                        android:src="@drawable/minus_yellow" />


                    <customsTextViews.CustomTextViewOpenSanRegular
                        android:id="@+id/txt_interval_count"
                        style="@style/textView_dark_grey_normal_micro"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:paddingBottom="@dimen/_5dp"
                        android:paddingTop="@dimen/_5dp"
                        android:singleLine="true"
                        android:text="0"
                        android:textColor="@color/health_mid_gray"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/img_plus_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:padding="@dimen/_5dp"
                        android:src="@drawable/plus_yellow" />

                    <LinearLayout
                        android:layout_width="@dimen/_50dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_10dp"
                        android:background="@drawable/search_bar_add"
                        android:orientation="horizontal">


                        <customsTextViews.CustomEditTextViewOpenSanRegular
                            android:id="@+id/edt_ml"
                            style="@style/textView_dark_grey_normal_micro_mini"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginRight="@dimen/_3dp"
                            android:background="@android:color/transparent"
                            android:ellipsize="end"
                            android:hint="ML/TSF"
                            android:visibility="gone"
                            android:imeOptions="actionNext"
                            android:inputType="textCapWords"
                            android:marqueeRepeatLimit="marquee_forever"
                            android:maxLength="35"
                            android:nextFocusRight="@+id/edt_medicine_name"
                            android:padding="@dimen/_4dp"
                            android:singleLine="true"
                            android:textColor="@color/health_yellow"
                            android:textColorHint="@color/health_yellow" />

                    </LinearLayout>
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="@dimen/_10dp"
                android:orientation="horizontal">

                <customsTextViews.CustomTextViewOpenSanRegular
                    style="@style/textView_dark_grey_normal_micro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:text="When "
                    android:textColor="@color/health_dark_gray"
                    android:textStyle="bold" />

                <RadioGroup
                    android:id="@+id/radioMeal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/_5dp"
                    android:orientation="horizontal">

                    <customsTextViews.CustomRadioButtonOpenSanRegular
                        android:id="@+id/radioBefore"
                        style="@style/textView_dark_grey_normal_micro"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:button="@drawable/checkbox_yellow_selector"
                        android:clickable="true"
                        android:paddingLeft="@dimen/_5dp"
                        android:text="Before Meal"
                        android:textColor="@color/health_mid_gray" />

                    <customsTextViews.CustomRadioButtonOpenSanRegular
                        android:id="@+id/radioAfter"
                        style="@style/textView_dark_grey_normal_micro"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_15dp"
                        android:button="@drawable/checkbox_yellow_selector"
                        android:clickable="true"
                        android:paddingLeft="@dimen/_5dp"
                        android:text="After Meal"
                        android:textColor="@color/health_mid_gray" />

                </RadioGroup>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/list_view_current_visit"
                android:layout_margin="@dimen/_10dp"
                android:orientation="horizontal">

                <customsTextViews.CustomTextViewOpenSanRegular
                    android:id="@+id/txt_btn_add_more_med"
                    style="@style/textView_dark_grey_normal_micro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:background="@android:color/transparent"
                    android:text="Add more medicine if the schedule is same"
                    android:textColor="@color/health_dark_gray"
                    android:visibility="gone" />

            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/linearView"
            android:background="@color/black" />
    </RelativeLayout>
</android.support.design.widget.CoordinatorLayout>