<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/coordinatorLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:background="@drawable/login_gradient"
    android:focusableInTouchMode="true"
    android:clickable="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/top_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/login_gradient"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_5dp">

                    <customsTextViews.CustomTextViewOpenSanRegular
                        android:id="@+id/txt_health_text"
                        style="@style/textView_dark_grey_normal_small"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/_5dp"
                        android:layout_marginRight="@dimen/_5dp"
                        android:elevation="@dimen/_10dp"
                        android:gravity="center"
                        android:text="CureNotes"
                        android:textColor="@color/health_yellow" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginRight="@dimen/_5dp"
                        android:layout_toRightOf="@+id/txt_health_text"
                        android:src="@drawable/landing_health_notes" />

                    <ImageView
                        android:id="@+id/img_question_note"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="@dimen/_5dp"
                        android:padding="@dimen/_5dp"
                        android:src="@drawable/how_to_yellow" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <FrameLayout
                        android:id="@+id/frameLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:id="@+id/linearView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/login_gradient"
                            android:gravity="center_vertical"
                            android:orientation="vertical"
                            android:visibility="visible">

                            <LinearLayout
                                android:id="@+id/layoutButtons"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_10dp"
                                android:orientation="vertical"
                                android:visibility="visible">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical">

                                        <LinearLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:orientation="horizontal">

                                            <customsTextViews.CustomTextViewOpenSanRegular
                                                style="@style/textView_dark_grey_normal_micro"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:gravity="center_horizontal"
                                                android:paddingBottom="@dimen/_5dp"
                                                android:paddingTop="@dimen/_5dp"
                                                android:singleLine="true"
                                                android:text="Add Note"
                                                android:textColor="@color/white" />

                                            <customsTextViews.CustomTextViewOpenSanRegular
                                                style="@style/textView_dark_grey_normal_micro_mini"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:gravity="center_horizontal"
                                                android:paddingBottom="@dimen/_5dp"
                                                android:paddingLeft="@dimen/_5dp"
                                                android:paddingTop="@dimen/_5dp"
                                                android:singleLine="true"
                                                android:text="(max 20 Characters)"
                                                android:textColor="@color/white"
                                                android:visibility="gone" />
                                        </LinearLayout>

                                        <LinearLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:orientation="horizontal">

                                            <LinearLayout
                                                android:layout_width="@dimen/_100dp"
                                                android:layout_height="wrap_content"
                                                android:background="@drawable/search_bar_add"
                                                android:orientation="horizontal">


                                                <customsTextViews.CustomEditTextViewOpenSanRegular
                                                    android:id="@+id/edt_subject"
                                                    style="@style/textView_dark_grey_normal_micro"
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"
                                                    android:layout_gravity="center_horizontal"
                                                    android:layout_marginRight="@dimen/_3dp"
                                                    android:background="@android:color/transparent"
                                                    android:ellipsize="end"
                                                    android:hint="Subject"
                                                    android:imeOptions="actionNext"
                                                    android:inputType="textCapWords"
                                                    android:marqueeRepeatLimit="marquee_forever"
                                                    android:maxLength="35"
                                                    android:nextFocusDown="@id/edt_deatils"
                                                    android:padding="@dimen/_4dp"
                                                    android:singleLine="true"
                                                    android:textColor="@color/health_yellow"
                                                    android:textColorHint="@color/cure_hint_color" />

                                            </LinearLayout>

                                            <customsTextViews.CustomTextViewOpenSanRegular
                                                android:id="@+id/txt_click_here_add"
                                                style="@style/textView_dark_grey_normal_micro_mini"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:gravity="center_horizontal"
                                                android:paddingBottom="@dimen/_5dp"
                                                android:paddingLeft="@dimen/_5dp"
                                                android:paddingTop="@dimen/_5dp"
                                                android:singleLine="true"
                                                android:text="Clear hear to Add more details"
                                                android:textColor="@color/white"
                                                android:visibility="visible" />

                                        </LinearLayout>
                                    </LinearLayout>

                                    <LinearLayout
                                        android:id="@+id/date_time_picker"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="@dimen/_5dp"
                                        android:orientation="vertical"
                                        android:visibility="gone">

                                        <LinearLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:orientation="horizontal">

                                            <customsTextViews.CustomTextViewOpenSanRegular
                                                style="@style/textView_dark_grey_normal_micro"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:gravity="center_horizontal"
                                                android:paddingBottom="@dimen/_5dp"
                                                android:paddingTop="@dimen/_5dp"
                                                android:singleLine="true"
                                                android:text="Date"
                                                android:textColor="@color/white" />

                                        </LinearLayout>

                                        <LinearLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:orientation="horizontal">

                                            <LinearLayout
                                                android:layout_width="@dimen/_50dp"
                                                android:layout_height="wrap_content"
                                                android:background="@drawable/search_bar_add"
                                                android:orientation="horizontal">


                                                <customsTextViews.CustomTextViewOpenSanRegular
                                                    android:id="@+id/txt_date_time"
                                                    style="@style/textView_dark_grey_normal_micro"
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"
                                                    android:layout_gravity="center_horizontal"
                                                    android:layout_marginRight="@dimen/_3dp"
                                                    android:background="@android:color/transparent"
                                                    android:ellipsize="end"
                                                    android:inputType="textCapWords"
                                                    android:marqueeRepeatLimit="marquee_forever"
                                                    android:padding="@dimen/_4dp"
                                                    android:singleLine="true"
                                                    android:textColor="@color/health_yellow"
                                                    android:textColorHint="@color/health_yellow" />

                                            </LinearLayout>


                                        </LinearLayout>
                                    </LinearLayout>

                                    <LinearLayout
                                        android:id="@+id/liner_date_t"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="@dimen/_5dp"
                                        android:orientation="vertical"
                                        android:visibility="gone">

                                        <LinearLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:orientation="horizontal">

                                            <customsTextViews.CustomTextViewOpenSanRegular
                                                style="@style/textView_dark_grey_normal_micro"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:gravity="center_horizontal"
                                                android:paddingBottom="@dimen/_5dp"
                                                android:paddingTop="@dimen/_5dp"
                                                android:singleLine="true"
                                                android:text="Time"
                                                android:textColor="@color/white" />

                                        </LinearLayout>

                                        <LinearLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:orientation="horizontal">

                                            <LinearLayout
                                                android:layout_width="@dimen/_45dp"
                                                android:layout_height="wrap_content"
                                                android:background="@drawable/search_bar_add"
                                                android:orientation="horizontal">


                                                <customsTextViews.CustomTextViewOpenSanRegular
                                                    android:id="@+id/txt_time"
                                                    style="@style/textView_dark_grey_normal_micro"
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:layout_gravity="center_horizontal"
                                                    android:layout_marginRight="@dimen/_3dp"
                                                    android:background="@android:color/transparent"
                                                    android:ellipsize="end"
                                                    android:inputType="textCapWords"
                                                    android:marqueeRepeatLimit="marquee_forever"
                                                    android:padding="@dimen/_4dp"
                                                    android:singleLine="true"
                                                    android:text="      "
                                                    android:textColor="@color/health_yellow"
                                                    android:textColorHint="@color/health_yellow" />


                                            </LinearLayout>

                                            <customsTextViews.CustomTextViewOpenSanRegular
                                                style="@style/textView_dark_grey_normal_micro"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_gravity="center_horizontal"
                                                android:background="@android:color/transparent"
                                                android:ellipsize="end"
                                                android:inputType="textCapWords"
                                                android:marqueeRepeatLimit="marquee_forever"
                                                android:padding="@dimen/_4dp"
                                                android:singleLine="true"
                                                android:text="To"
                                                android:textColor="@color/white" />


                                        </LinearLayout>
                                    </LinearLayout>

                                    <LinearLayout
                                        android:id="@+id/liner_to_time"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical"
                                        android:visibility="gone">

                                        <LinearLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:orientation="horizontal">

                                            <customsTextViews.CustomTextViewOpenSanRegular
                                                style="@style/textView_dark_grey_normal_micro"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:gravity="center_horizontal"
                                                android:paddingBottom="@dimen/_5dp"
                                                android:paddingTop="@dimen/_5dp"
                                                android:singleLine="true"
                                                android:text="Date"
                                                android:textColor="@color/white"
                                                android:visibility="invisible" />

                                        </LinearLayout>

                                        <LinearLayout

                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:orientation="horizontal">

                                            <LinearLayout
                                                android:layout_width="@dimen/_45dp"
                                                android:layout_height="wrap_content"
                                                android:background="@drawable/search_bar_add"
                                                android:orientation="horizontal">


                                                <customsTextViews.CustomTextViewOpenSanRegular
                                                    android:id="@+id/txt_to_time"
                                                    style="@style/textView_dark_grey_normal_micro"
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"
                                                    android:layout_gravity="center_horizontal"
                                                    android:layout_marginRight="@dimen/_3dp"
                                                    android:background="@android:color/transparent"
                                                    android:ellipsize="end"
                                                    android:inputType="textCapWords"
                                                    android:marqueeRepeatLimit="marquee_forever"
                                                    android:padding="@dimen/_4dp"
                                                    android:singleLine="true"
                                                    android:text="     "
                                                    android:textColor="@color/health_yellow"
                                                    android:textColorHint="@color/health_yellow" />

                                            </LinearLayout>


                                        </LinearLayout>
                                    </LinearLayout>

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">


                                    <customsTextViews.CustomTextViewOpenSanRegular
                                        style="@style/textView_dark_grey_normal_micro"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:gravity="center_horizontal"
                                        android:paddingBottom="@dimen/_5dp"
                                        android:paddingTop="@dimen/_5dp"
                                        android:singleLine="true"
                                        android:text="Details"
                                        android:textColor="@color/white" />

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:orientation="horizontal">

                                        <LinearLayout
                                            android:layout_width="@dimen/_200dp"
                                            android:layout_height="@dimen/_60dp"
                                            android:background="@drawable/search_bar_add"
                                            android:orientation="horizontal">


                                            <customsTextViews.CustomEditTextViewOpenSanRegular
                                                android:id="@+id/edt_deatils"
                                                style="@style/textView_dark_grey_normal_micro"
                                                android:layout_width="match_parent"
                                                android:layout_height="match_parent"
                                                android:layout_gravity="top"
                                                android:layout_marginRight="@dimen/_3dp"
                                                android:background="@android:color/transparent"
                                                android:ellipsize="end"
                                                android:gravity="top"
                                                android:inputType="textMultiLine"
                                                android:marqueeRepeatLimit="marquee_forever"
                                                android:padding="@dimen/_4dp"
                                                android:singleLine="true"
                                                android:textColor="@color/health_yellow"
                                                android:textColorHint="@color/cure_hint_color" />


                                        </LinearLayout>

                                        <customsTextViews.CustomTextViewOpenSanRegular
                                            android:id="@+id/btn_done"
                                            style="@style/textView_dark_grey_normal_micro"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center"
                                            android:layout_marginLeft="@dimen/_10dp"
                                            android:background="@drawable/yellow_button_selector"
                                            android:elevation="@dimen/_5dp"
                                            android:gravity="center_vertical"
                                            android:paddingBottom="@dimen/_2dp"
                                            android:layout_marginTop="@dimen/_15dp"
                                            android:paddingLeft="@dimen/_15dp"
                                            android:paddingRight="@dimen/_15dp"
                                            android:paddingTop="@dimen/_2dp"
                                            android:text="Done"
                                            android:textColor="@color/health_red_drawer" />

                                    </LinearLayout>
                                </LinearLayout>


                            </LinearLayout>

                        </LinearLayout>

                    </FrameLayout>
                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/liner_bottom"
            android:layout_below="@+id/top_view"
            android:layout_marginTop="@dimen/_15dp"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/realtive_no_health"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="@dimen/_5dp"
                android:visibility="gone">

                <customsTextViews.CustomTextViewOpenSanRegular
                    style="@style/textView_dark_grey_normal_medium"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:text="No Health Note"
                    android:textColor="@color/white" />

            </RelativeLayout>

            <sticky.header.ExpandableStickyListHeadersListView
                android:id="@+id/list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipToPadding="false"
                android:drawSelectorOnTop="true"
                android:fastScrollEnabled="true"
                android:overScrollMode="never"
                android:scrollbarStyle="outsideOverlay"
                android:visibility="gone" />


        </LinearLayout>


    </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>