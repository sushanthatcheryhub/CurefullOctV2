<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/coordinatorLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:background="@drawable/login_gradient"
    android:clickable="true"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ScrollView
            android:id="@+id/top_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10dp"
                android:background="@drawable/login_gradient"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_horizontal">

                    <ImageView
                        android:id="@+id/img_rem"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginRight="@dimen/_5dp"

                        android:src="@drawable/notebook" />

                    <customsTextViews.CustomTextViewOpenSanRegular
                        android:id="@+id/txt_health_text"
                        style="@style/textView_dark_grey_normal_micro"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/_5dp"
                        android:layout_toRightOf="@+id/img_rem"
                        android:elevation="@dimen/_10dp"
                        android:gravity="center"
                        android:padding="@dimen/_2dp"
                        android:text="Set Reminder"
                        android:textColor="@color/health_yellow" />


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_5dp"
                    android:background="@drawable/reminder_boader"
                    android:orientation="vertical">

                    <customsTextViews.CustomTextViewOpenSanRegular
                        android:id="@+id/txt_med_detail"
                        style="@style/textView_dark_grey_normal_small"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/_5dp"
                        android:elevation="@dimen/_5dp"
                        android:gravity="center_horizontal"
                        android:text="Medicine Detail"
                        android:textColor="@color/health_yellow" />

                    <LinearLayout
                        android:id="@+id/linearView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/txt_med_detail"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="@dimen/_10dp"
                        android:gravity="center_vertical"
                        android:orientation="vertical"
                        android:visibility="visible">

                        <customsTextViews.CustomTextViewOpenSanRegular
                            style="@style/textView_dark_grey_normal_small"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:elevation="@dimen/_5dp"
                            android:gravity="left"
                            android:text="Tpye"
                            android:textColor="@color/health_yellow" />

                        <LinearLayout
                            android:id="@+id/layou_mymessages_favourites"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_marginTop="@dimen/_5dp"
                            android:orientation="horizontal">

                            <RelativeLayout
                                android:id="@+id/layout_tablet"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@drawable/registerandloginbuttonselector"
                                android:orientation="vertical"
                                android:paddingBottom="@dimen/_4dp">

                                <ImageView
                                    android:id="@+id/image_tablet"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginTop="@dimen/_5dp"
                                    android:src="@drawable/ic_circle_48dp" />


                                <customsTextViews.CustomTextViewOpenSanRegular
                                    style="@style/textView_dark_grey_normal_micro"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/image_tablet"
                                    android:layout_centerHorizontal="true"
                                    android:layout_gravity="center_horizontal"
                                    android:gravity="center_horizontal"
                                    android:text="Tablet"
                                    android:textColor="@color/white" />
                            </RelativeLayout>

                            <View
                                android:layout_width="1dp"
                                android:layout_height="match_parent"
                                android:background="@color/black" />

                            <RelativeLayout
                                android:id="@+id/layout_capsule"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@drawable/registerandloginbuttonselector"
                                android:orientation="vertical"
                                android:paddingBottom="@dimen/_4dp">

                                <ImageView
                                    android:id="@+id/img_capsule"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginTop="@dimen/_5dp"
                                    android:src="@drawable/ic_circle_48dp" />


                                <customsTextViews.CustomTextViewOpenSanRegular
                                    style="@style/textView_dark_grey_normal_micro"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/img_capsule"
                                    android:layout_centerHorizontal="true"
                                    android:layout_gravity="center_horizontal"
                                    android:gravity="center_horizontal"
                                    android:text="Capsule"
                                    android:textColor="@color/white" />
                            </RelativeLayout>

                            <View
                                android:layout_width="1dp"
                                android:layout_height="match_parent"
                                android:background="@color/black" />

                            <RelativeLayout
                                android:id="@+id/layout_syrup"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@drawable/registerandloginbuttonselector"
                                android:orientation="vertical"
                                android:paddingBottom="@dimen/_4dp">

                                <ImageView
                                    android:id="@+id/img_syrup"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginTop="@dimen/_5dp"
                                    android:src="@drawable/ic_circle_48dp" />


                                <customsTextViews.CustomTextViewOpenSanRegular
                                    style="@style/textView_dark_grey_normal_micro"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/img_syrup"
                                    android:layout_centerHorizontal="true"
                                    android:layout_gravity="center_horizontal"
                                    android:gravity="center_horizontal"
                                    android:text="Syrup"
                                    android:textColor="@color/white" />
                            </RelativeLayout>

                            <View
                                android:layout_width="1dp"
                                android:layout_height="match_parent"
                                android:background="@color/black" />

                            <RelativeLayout
                                android:id="@+id/layout_drops"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@drawable/registerandloginbuttonselector"
                                android:orientation="vertical"
                                android:paddingBottom="@dimen/_4dp">

                                <ImageView
                                    android:id="@+id/img_drops"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginTop="@dimen/_5dp"
                                    android:src="@drawable/ic_circle_48dp" />


                                <customsTextViews.CustomTextViewOpenSanRegular
                                    style="@style/textView_dark_grey_normal_micro"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/img_drops"
                                    android:layout_centerHorizontal="true"
                                    android:layout_gravity="center_horizontal"
                                    android:gravity="center_horizontal"
                                    android:text="Drops"
                                    android:textColor="@color/white" />
                            </RelativeLayout>

                            <View
                                android:layout_width="1dp"
                                android:layout_height="match_parent"
                                android:background="@color/black" />

                            <RelativeLayout
                                android:id="@+id/layout_injection"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@drawable/registerandloginbuttonselector"
                                android:orientation="vertical"
                                android:paddingBottom="@dimen/_4dp">

                                <ImageView
                                    android:id="@+id/img_injection"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginTop="@dimen/_5dp"
                                    android:src="@drawable/ic_circle_48dp" />


                                <customsTextViews.CustomTextViewOpenSanRegular
                                    style="@style/textView_dark_grey_normal_micro"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/img_injection"
                                    android:layout_centerHorizontal="true"
                                    android:layout_gravity="center_horizontal"
                                    android:gravity="center_horizontal"
                                    android:text="Injection"
                                    android:textColor="@color/white" />
                            </RelativeLayout>

                            <View
                                android:layout_width="1dp"
                                android:layout_height="match_parent"
                                android:background="@color/black" />

                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <customsTextViews.CustomTextViewOpenSanRegular
                                        style="@style/textView_dark_grey_normal_micro"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:gravity="center_horizontal"
                                        android:paddingBottom="@dimen/_5dp"
                                        android:paddingTop="@dimen/_5dp"
                                        android:singleLine="true"
                                        android:text="Doctor Name"
                                        android:textColor="@color/health_yellow"
                                        android:textStyle="bold" />

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <LinearLayout
                                        android:layout_width="@dimen/_130dp"
                                        android:layout_height="wrap_content"
                                        android:background="@drawable/search_bar_add"
                                        android:orientation="horizontal">


                                        <customsTextViews.CustomEditTextViewOpenSanRegular
                                            style="@style/textView_dark_grey_normal_micro"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center_horizontal"
                                            android:layout_marginRight="@dimen/_3dp"
                                            android:background="@android:color/transparent"
                                            android:ellipsize="end"
                                            android:hint="Type Doctor Name"
                                            android:imeOptions="actionNext"
                                            android:inputType="textCapWords"
                                            android:marqueeRepeatLimit="marquee_forever"
                                            android:maxLength="35"
                                            android:nextFocusDown="@id/edt_deatils"
                                            android:padding="@dimen/_4dp"
                                            android:singleLine="true"
                                            android:textColor="#282828"
                                            android:textColorHint="@color/health_yellow" />

                                    </LinearLayout>


                                </LinearLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <customsTextViews.CustomTextViewOpenSanRegular
                                        style="@style/textView_dark_grey_normal_micro"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:gravity="center_horizontal"
                                        android:paddingBottom="@dimen/_5dp"
                                        android:paddingTop="@dimen/_5dp"
                                        android:singleLine="true"
                                        android:text="Medicine Name"
                                        android:textColor="@color/health_yellow"
                                        android:textStyle="bold" />

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <LinearLayout
                                        android:layout_width="@dimen/_130dp"
                                        android:layout_height="wrap_content"
                                        android:background="@drawable/search_bar_add"
                                        android:orientation="horizontal">


                                        <customsTextViews.CustomEditTextViewOpenSanRegular
                                            style="@style/textView_dark_grey_normal_micro"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center_horizontal"
                                            android:layout_marginRight="@dimen/_3dp"
                                            android:background="@android:color/transparent"
                                            android:ellipsize="end"
                                            android:hint="Type Medicine Name"
                                            android:imeOptions="actionNext"
                                            android:inputType="textCapWords"
                                            android:marqueeRepeatLimit="marquee_forever"
                                            android:maxLength="35"
                                            android:nextFocusDown="@id/edt_deatils"
                                            android:padding="@dimen/_4dp"
                                            android:singleLine="true"
                                            android:textColor="#282828"
                                            android:textColorHint="@color/health_yellow" />

                                    </LinearLayout>


                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_15dp"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <customsTextViews.CustomTextViewOpenSanRegular
                                    style="@style/textView_dark_grey_normal_micro"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_horizontal"
                                    android:paddingBottom="@dimen/_5dp"
                                    android:paddingTop="@dimen/_5dp"
                                    android:singleLine="true"
                                    android:text="Dosage"
                                    android:textColor="@color/health_yellow"
                                    android:textStyle="bold" />

                                <ImageView
                                    android:id="@+id/img_minus_icon"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:padding="@dimen/_5dp"
                                    android:src="@drawable/minus_red" />


                                <customsTextViews.CustomTextViewOpenSanRegular
                                    style="@style/textView_dark_grey_normal_micro"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_horizontal"
                                    android:paddingBottom="@dimen/_5dp"
                                    android:paddingTop="@dimen/_5dp"
                                    android:singleLine="true"
                                    android:text="1"
                                    android:textColor="@color/health_yellow"
                                    android:textStyle="bold" />

                                <ImageView
                                    android:id="@+id/img_plus_icon"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:padding="@dimen/_5dp"
                                    android:src="@drawable/plus_red" />


                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="@dimen/_10dp"
                                android:orientation="horizontal">

                                <customsTextViews.CustomTextViewOpenSanRegular
                                    style="@style/textView_dark_grey_normal_micro"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:gravity="center_vertical"
                                    android:singleLine="true"
                                    android:text="When "
                                    android:textColor="@color/health_yellow"
                                    android:textStyle="bold" />

                                <RadioGroup
                                    android:id="@+id/radioGender"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginLeft="@dimen/_5dp"
                                    android:orientation="horizontal">

                                    <customsTextViews.CustomRadioButtonOpenSanRegular
                                        android:id="@+id/radioMale"
                                        style="@style/textView_dark_grey_normal_micro"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:button="@drawable/checkbox_yellow_selector"
                                        android:clickable="true"
                                        android:paddingLeft="@dimen/_5dp"
                                        android:text="Before Meal"
                                        android:textColor="@color/health_yellow" />

                                    <customsTextViews.CustomRadioButtonOpenSanRegular
                                        android:id="@+id/radioFemale"
                                        style="@style/textView_dark_grey_normal_micro"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="@dimen/_15dp"
                                        android:button="@drawable/checkbox_yellow_selector"
                                        android:clickable="true"
                                        android:paddingLeft="@dimen/_5dp"
                                        android:text="After Meal"
                                        android:textColor="@color/health_yellow" />

                                </RadioGroup>

                            </LinearLayout>
                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10dp"
                            android:orientation="horizontal">

                            <customsTextViews.CustomTextViewOpenSanRegular
                                android:id="@+id/txt_btn_add_more_med"
                                style="@style/textView_dark_grey_normal_micro"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:background="@android:color/transparent"
                                android:text="Add more medicine if the schedule is same"
                                android:textColor="@color/health_yellow" />

                        </LinearLayout>


                    </LinearLayout>


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/_5dp"
                    android:layout_marginRight="@dimen/_5dp"
                    android:layout_marginTop="-10dp"
                    android:background="@color/health_yellow"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="@dimen/_10dp">

                    <customsTextViews.CustomTextViewOpenSanRegular
                        android:id="@+id/btn_done"
                        style="@style/textView_dark_grey_normal_small"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:elevation="@dimen/_5dp"
                        android:gravity="left"
                        android:text="Schedule"
                        android:textColor="@color/health_red_drawer" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/edit_red" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_5dp"
                    android:layout_marginRight="@dimen/_5dp"
                    android:background="@drawable/reminder_boader"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="@dimen/_10dp"
                        android:gravity="center_vertical"
                        android:orientation="vertical"
                        android:visibility="visible">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_5dp"
                            android:orientation="horizontal">

                            <customsTextViews.CustomTextViewOpenSanRegular
                                style="@style/textView_dark_grey_normal_micro"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:gravity="center_vertical"
                                android:singleLine="true"
                                android:text="Start from"
                                android:textColor="@color/health_yellow"
                                android:textStyle="bold" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_10dp"
                                android:layout_weight="1.5"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal">


                                        <customsTextViews.CustomTextViewOpenSanRegular
                                            style="@style/textView_dark_grey_normal_micro"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center_horizontal"
                                            android:layout_marginRight="@dimen/_3dp"
                                            android:background="@android:color/transparent"
                                            android:padding="@dimen/_4dp"
                                            android:text="DD/MM/YYYY"
                                            android:textColor="@color/health_yellow" />

                                        <ImageView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center_vertical"
                                            android:src="@drawable/edit_red" />

                                    </LinearLayout>

                                    <View
                                        android:layout_width="match_parent"
                                        android:layout_height="1dp"
                                        android:background="@color/health_edit_line" />
                                </LinearLayout>
                            </LinearLayout>

                            <customsTextViews.CustomTextViewOpenSanRegular
                                style="@style/textView_dark_grey_normal_micro"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="@dimen/_5dp"
                                android:gravity="center_vertical"
                                android:singleLine="true"
                                android:text="Duration"
                                android:textColor="@color/health_yellow"
                                android:textStyle="bold" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_5dp"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal">


                                        <customsTextViews.CustomTextViewOpenSanRegular
                                            style="@style/textView_dark_grey_normal_micro"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center_horizontal"
                                            android:layout_marginRight="@dimen/_3dp"
                                            android:background="@android:color/transparent"
                                            android:padding="@dimen/_4dp"
                                            android:text="3"
                                            android:textColor="@color/health_yellow" />

                                        <ImageView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center_vertical"
                                            android:src="@drawable/edit_red" />

                                    </LinearLayout>

                                    <View
                                        android:layout_width="match_parent"
                                        android:layout_height="1dp"
                                        android:background="@color/health_edit_line" />
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <customsTextViews.CustomTextViewOpenSanRegular
                                        style="@style/textView_dark_grey_normal_micro"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:gravity="center_horizontal"
                                        android:paddingBottom="@dimen/_5dp"
                                        android:paddingTop="@dimen/_5dp"
                                        android:singleLine="true"
                                        android:text="Reminder repeat from Mon to Sat Every Week."
                                        android:textColor="@color/health_yellow"
                                        android:textStyle="bold" />

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <toggle.button.MultiSelectToggleGroup
                                        android:id="@+id/multi_selection_group"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:elevation="@dimen/_5dp"
                                        android:textSize="16sp"
                                        app:animationType="scale"
