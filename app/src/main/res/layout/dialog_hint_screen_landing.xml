<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/realtive_hint"
    android:background="#CC000000"
    android:clickable="true">


    <customsTextViews.CustomTextViewOpenSanRegular
        android:id="@+id/txt_health_text"
        style="@style/textView_dark_grey_normal_micro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_30dp"
        android:layout_marginRight="@dimen/_30dp"
        android:layout_marginTop="@dimen/_50dp"
        android:elevation="@dimen/_10dp"
        android:gravity="left"
        android:padding="@dimen/_2dp"
        android:text="About Health Note Lorem Ipsum is simply dummy text of the printing and typesetting industry."
        android:textColor="@color/health_yellow" />

    <LinearLayout
        android:id="@+id/linearView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/layoutButtons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10dp"
            android:layout_marginTop="@dimen/_70dp"
            android:orientation="vertical">

            <customsTextViews.CustomTextViewOpenSanRegular
                style="@style/textView_dark_grey_normal_micro_mini"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:singleLine="true"
                android:text="Write symptom here what you are facing."
                android:textColor="@color/health_yellow" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/liner_user"
                android:layout_gravity="center_vertical"
                android:src="@drawable/curved_arrow_down_right" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="@dimen/_100dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/search_bar_add"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">


                    <customsTextViews.CustomEditTextViewOpenSanRegular
                        android:id="@+id/edt_subject"
                        style="@style/textView_dark_grey_normal_micro"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginRight="@dimen/_3dp"
                        android:background="@android:color/transparent"
                        android:clickable="false"
                        android:ellipsize="end"
                        android:enabled="false"
                        android:hint="Subject"
                        android:padding="@dimen/_4dp"
                        android:singleLine="true"
                        android:textColor="#282828"
                        android:textColorHint="@color/cure_hint_color" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/_15dp"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <customsTextViews.CustomTextViewOpenSanRegular
                        style="@style/textView_dark_grey_normal_micro_mini"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_5dp"
                        android:gravity="center_horizontal"
                        android:singleLine="true"
                        android:text="Add date and time for better experience."
                        android:textColor="@color/health_yellow" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <customsTextViews.CustomTextViewOpenSanRegular
                            android:id="@+id/txt_click_here_add"
                            style="@style/textView_dark_grey_normal_micro_mini"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:background="#C65944"
                            android:gravity="center_vertical"
                            android:singleLine="true"
                            android:text="Clear here to Add more details"
                            android:textColor="@color/white"
                            android:visibility="visible" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignLeft="@+id/liner_user"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/curved_arrow_down_left" />
                    </LinearLayout>
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_15dp"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/_5dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="@dimen/_200dp"
                        android:layout_height="@dimen/_60dp"
                        android:background="@drawable/search_bar_add"
                        android:orientation="horizontal">


                        <customsTextViews.CustomEditTextViewOpenSanRegular
                            android:id="@+id/edt_deatils"
                            style="@style/textView_dark_grey_normal_micro"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="top"
                            android:layout_marginRight="@dimen/_3dp"
                            android:background="@android:color/transparent"
                            android:clickable="false"
                            android:enabled="false"
                            android:gravity="top"
                            android:padding="@dimen/_4dp"
                            android:singleLine="true"
                            android:textColor="#282828"
                            android:textColorHint="@color/cure_hint_color" />


                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/curved_arrow_up_left" />

                <customsTextViews.CustomTextViewOpenSanRegular
                    style="@style/textView_dark_grey_normal_micro_mini"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="@dimen/_5dp"
                    android:gravity="bottom"
                    android:text="Write complete detail about symptom."
                    android:textColor="@color/health_yellow" />
            </LinearLayout>


        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
