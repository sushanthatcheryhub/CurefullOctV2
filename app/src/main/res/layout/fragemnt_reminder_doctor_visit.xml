<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/coordinatorLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:background="@drawable/login_gradient"
    android:clickable="true"
    android:focusableInTouchMode="true"
   >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/top_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/login_gradient"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_horizontal"
                    android:padding="@dimen/_5dp">

                    <ImageView
                        android:id="@+id/img_rem"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginRight="@dimen/_5dp"

                        android:src="@drawable/notebook" />

                    <customsTextViews.CustomTextViewOpenSanRegular
                        android:id="@+id/txt_health_text"
                        style="@style/textView_dark_grey_normal_micro"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/_5dp"
                        android:layout_toRightOf="@+id/img_rem"
                        android:elevation="@dimen/_10dp"
                        android:gravity="center"
                        android:padding="@dimen/_2dp"
                        android:text="Set Reminder for Doctor visit"
                        android:textColor="@color/health_yellow" />


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_5dp"
                    android:background="@drawable/reminder_boader"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/linearView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="@dimen/_10dp"
                        android:gravity="center_vertical"
                        android:orientation="vertical"
                        android:visibility="visible">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <customsTextViews.CustomTextViewOpenSanRegular
                                        style="@style/textView_dark_grey_normal_micro"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:gravity="center_horizontal"
                                        android:paddingBottom="@dimen/_5dp"
                                        android:paddingTop="@dimen/_5dp"
                                        android:singleLine="true"
                                        android:text="Doctor Name"
                                        android:textColor="@color/health_yellow"
                                        android:textStyle="bold" />

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <LinearLayout
                                        android:layout_width="@dimen/_130dp"
                                        android:layout_height="wrap_content"
                                        android:background="@drawable/search_bar_add"
                                        android:orientation="horizontal">


                                        <customsTextViews.CustomEditTextViewOpenSanRegular
                                            style="@style/textView_dark_grey_normal_micro"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center_horizontal"
                                            android:layout_marginRight="@dimen/_3dp"
                                            android:background="@android:color/transparent"
                                            android:ellipsize="end"
                                            android:hint="Doctor Name"
                                            android:imeOptions="actionNext"
                                            android:inputType="textCapWords"
                                            android:marqueeRepeatLimit="marquee_forever"
                                            android:maxLength="35"
                                            android:nextFocusDown="@id/edt_deatils"
                                            android:padding="@dimen/_4dp"
                                            android:singleLine="true"
                                            android:textColor="#282828"
                                            android:textColorHint="@color/health_yellow" />

                                    </LinearLayout>


                                </LinearLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <customsTextViews.CustomTextViewOpenSanRegular
                                        style="@style/textView_dark_grey_normal_micro"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:gravity="center_horizontal"
                                        android:paddingBottom="@dimen/_5dp"
                                        android:paddingTop="@dimen/_5dp"
                                        android:singleLine="true"
                                        android:text="Hospital / Clinic Name"
                                        android:textColor="@color/health_yellow"
                                        android:textStyle="bold" />

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <LinearLayout
                                        android:layout_width="@dimen/_130dp"
                                        android:layout_height="wrap_content"
                                        android:background="@drawable/search_bar_add"
                                        android:orientation="horizontal">


                                        <customsTextViews.CustomEditTextViewOpenSanRegular
                                            style="@style/textView_dark_grey_normal_micro"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center_horizontal"
                                            android:layout_marginRight="@dimen/_3dp"
                                            android:background="@android:color/transparent"
                                            android:ellipsize="end"
                                            android:hint="Hospital / Clinic Name"
                                            android:imeOptions="actionNext"
                                            android:inputType="textCapWords"
                                            android:marqueeRepeatLimit="marquee_forever"
                                            android:maxLength="35"
                                            android:nextFocusDown="@id/edt_deatils"
                                            android:padding="@dimen/_4dp"
                                            android:singleLine="true"
                                            android:textColor="#282828"
                                            android:textColorHint="@color/health_yellow" />

                                    </LinearLayout>


                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_15dp"
                            android:orientation="horizontal">

                            <customsTextViews.CustomTextViewOpenSanRegular
                                style="@style/textView_dark_grey_normal_micro"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:gravity="center_vertical"
                                android:singleLine="true"
                                android:text="Date"
                                android:textColor="@color/health_yellow"
                                android:textStyle="bold" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_10dp"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <LinearLayout
                                        android:id="@+id/liner_date_select"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal">


                                        <customsTextViews.CustomTextViewOpenSanRegular
                                            android:id="@+id/txt_date"
                                            style="@style/textView_dark_grey_normal_micro"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center_horizontal"
                                            android:layout_marginRight="@dimen/_3dp"
                                            android:background="@android:color/transparent"
                                            android:padding="@dimen/_4dp"
                                            android:text="DD/MM/YYYY"
                                            android:textColor="@color/health_yellow" />

                                        <ImageView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center_vertical"
                                            android:src="@drawable/edit_red" />

                                    </LinearLayout>

                                    <View
                                        android:layout_width="match_parent"
                                        android:layout_height="1dp"
                                        android:background="@color/health_edit_line" />
                                </LinearLayout>
                            </LinearLayout>

                            <customsTextViews.CustomTextViewOpenSanRegular
                                style="@style/textView_dark_grey_normal_micro"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:gravity="center_vertical"
                                android:singleLine="true"
                                android:text="Time"
                                android:textColor="@color/health_yellow"
                                android:textStyle="bold" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_10dp"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal">


                                        <customsTextViews.CustomTextViewOpenSanRegular
                                            style="@style/textView_dark_grey_normal_micro"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center_horizontal"
                                            android:layout_marginRight="@dimen/_3dp"
                                            android:background="@android:color/transparent"
                                            android:padding="@dimen/_4dp"
                                            android:text="HH:MM AM"
                                            android:textColor="@color/health_yellow" />

                                        <ImageView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center_vertical"
                                            android:src="@drawable/edit_red" />

                                    </LinearLayout>

                                    <View
                                        android:layout_width="match_parent"
                                        android:layout_height="1dp"
                                        android:background="@color/health_edit_line" />
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_15dp"
                            android:orientation="horizontal">

                            <customsTextViews.CustomTextViewOpenSanRegular
                                style="@style/textView_dark_grey_normal_micro"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:gravity="center_vertical"
                                android:singleLine="true"
                                android:text="Reminder me in every "
                                android:textColor="@color/health_yellow"
                                android:textStyle="bold" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_10dp"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal">


                                        <customsTextViews.CustomTextViewOpenSanRegular
                                            style="@style/textView_dark_grey_normal_micro"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center_horizontal"
                                            android:layout_marginRight="@dimen/_3dp"
                                            android:background="@android:color/transparent"
                                            android:padding="@dimen/_4dp"
                                            android:text="0"
                                            android:textColor="@color/health_yellow" />


                                    </LinearLayout>

                                    <View
                                        android:layout_width="match_parent"
                                        android:layout_height="1dp"
                                        android:background="@color/health_edit_line" />
                                </LinearLayout>
                            </LinearLayout>

                            <customsTextViews.CustomTextViewOpenSanRegular
                                style="@style/textView_dark_grey_normal_micro"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:gravity="center_vertical"
                                android:singleLine="true"
                                android:text="Days"
                                android:textColor="@color/health_yellow"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:layout_marginTop="@dimen/_15dp"
                            android:gravity="right"
                            android:orientation="horizontal">

                            <customsTextViews.CustomTextViewOpenSanRegular
                                android:id="@+id/btn_done"
                                style="@style/textView_dark_grey_normal_small"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right"
                                android:layout_marginLeft="@dimen/_10dp"
                                android:background="@color/health_yellow"
                                android:elevation="@dimen/_5dp"
                                android:gravity="right"
                                android:paddingBottom="@dimen/_5dp"
                                android:paddingLeft="@dimen/_25dp"
                                android:paddingRight="@dimen/_25dp"
                                android:paddingTop="@dimen/_5dp"
                                android:text="Set Reminder"
                                android:textColor="@color/health_red_drawer" />


                        </LinearLayout>
                    </LinearLayout>


                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/liner_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="#A91922"
            android:elevation="@dimen/_15dp"
            android:orientation="horizontal"
            android:padding="@dimen/_10dp">

            <LinearLayout
                android:id="@+id/txt_lab_reports"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <customsTextViews.CustomTextViewOpenSanBold
                    style="@style/textView_dark_grey_normal_micro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:text="Lab Report"
                    android:textColor="@color/health_yellow"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/_5dp"
                    android:src="@drawable/reports_small_icon" />
            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/health_yellow" />

            <LinearLayout
                android:id="@+id/txt_heath_app"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <customsTextViews.CustomTextViewOpenSanBold
                    style="@style/textView_dark_grey_normal_micro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:text="Health App"
                    android:textColor="@color/health_yellow"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/_5dp"
                    android:src="@drawable/step_count_small_icon_1" />
            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/health_yellow" />

            <LinearLayout
                android:id="@+id/txt_prescription"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <customsTextViews.CustomTextViewOpenSanBold
                    style="@style/textView_dark_grey_normal_micro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:text="Prescriptions"
                    android:textColor="@color/health_yellow"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/_5dp"
                    android:src="@drawable/prescription_small_icon" />
            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>